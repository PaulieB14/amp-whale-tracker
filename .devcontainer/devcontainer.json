{
  "name": "Amp Whale Tracker",
  "image": "mcr.microsoft.com/devcontainers/python:3.11-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false,
      "version": "latest"
    }
  },
  "postCreateCommand": "pip install -r requirements.txt",
  "forwardPorts": [8501, 1603],
  "portsAttributes": {
    "8501": {
      "label": "Whale Tracker Dashboard",
      "onAutoForward": "openBrowser"
    },
    "1603": {
      "label": "Amp Server"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.flake8"
      ]
    }
  },
  "remoteUser": "vscode"
}